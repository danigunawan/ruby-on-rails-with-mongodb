<%= form_for @blog do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "Cancel", blogs_path, class: "btn btn-primary" %>
<% end %>
